<?xml version="1.0" encoding="UTF-8"?>
<!--
  Formular-Definition für die Filter- und Sortierfelder der Einsatzberichte-Übersicht im Backend.
  Wird vom Model geladen, um das Filterformular (Suchfeld, Sortierung, Limit) im View bereitzustellen.
  Anpassbar für weitere Views durch Kopieren und Anpassen der Felder.
-->
<form>
  <fields name="filter">
    <!-- Suchfeld für Einsatzberichte -->
    <field name="search" type="text" label="COM_BLAULICHTMONITOR_PROJECTS_FILTER_SEARCH" />
  </fields>
  <fields name="list">
    <!-- Dropdown für Sortierung nach verschiedenen Spalten -->
    <field name="fullordering" type="list" label="JGLOBAL_SORT_BY" default="a.alarmieurngszeit DESC" class="js-select-submit-on-change" validate="options">
      <option value="">JGLOBAL_SORT_BY</option>
      <option value="a.alarmierungszeit ASC">Alarmierungszeit aufsteigend</option>
      <option value="a.alarmierungszeit DESC">Alarmierungszeit absteigend</option>
      <option value="a.counter_clicks ASC">Zugriffe aufsteigend</option>
      <option value="a.counter_clicks DESC">Zugriffe absteigend</option>
    </field>
    <!-- Limit-Auswahl für Anzahl der angezeigten Einträge -->
    <field name="limit" type="limitbox" label="JGLOBAL_LIST_LIMIT" default="25" class="js-select-submit-on-change" />
  </fields>
</form>
